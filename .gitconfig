[core]
	editor = nvim
[user]
	email = kol@posteo.de
	name = '!whoami'
[grep]
	lineNumber = true
[alias]
    wt = worktree
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph
    co = checkout
    c = commit
    b = branch
    s = status
    d = diff
[mergetool]
	prompt = false
[color]
	ui = auto
[alias]
   vimdiff=difftol -y -t vimdiff -R
[pager]
	branch = false
